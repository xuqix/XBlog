<% object = (defined?(@comment) ? @comment : @article.comments.build) %>

<%= form_for object, url: archive_comments_path(@article) do |f| %>
  <%= render 'shared/error_messages', object: object %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit defined?(text)? text : "comment it!" %>
  </p>
<% end %>
