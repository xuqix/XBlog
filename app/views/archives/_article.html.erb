<% if defined?(simple) && simple %>
<p><%= link_to article.title, archive_path(article) %> --- <%= article.content[0,20] %></p>
<% else %>
<div class="article-title">
  <h1 align="center"><%= article.title %></h1><br>
</div>
<div class="article-content">
  <%= markdown(article.content) %><br><br>
<div class="text-info">
<p align="right">
  发布时间: <%= format_time(article.created_at) %>&nbsp;&nbsp;&nbsp;&nbsp;
  最后编辑: <%= format_time(article.updated_at) %>
</p>
</div>
</div>
<% end %>
