<% if defined?(simple) && simple %>
<table>
  <tr>
    <td><%= link_to article.title, archive_path(article) %> --- <%= article.content[0,20] %></td>
  </tr>
</table>
<% else %>

<p>
  <strong>Title:</strong>
  <%= article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= article.content %>
</p>

<p> publish at: <%= format_time(article.created_at) %> </p>
<p> last edit at: <%= format_time(article.updated_at) %> </p>

<% end %>
